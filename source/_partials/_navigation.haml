- if current_page.data.section == "portfolio"
  - fixed = " navbar-fixed-top"

%nav.navbar{role: "navigation", class: "#{fixed}"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#primary-navigation", "data-toggle" => "collapse", type: "button"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#{site_url}"} Jason Cross

    .collapse.navbar-collapse#primary-navigation
      %ul.nav.navbar-nav
        - if current_page.data.section == "portfolio"
          %li
            %a{href: "#{site_url}#portfolio"}
              %i.fa.fa-arrow-circle-left
              Back to portfolio
        - else
          %li.nav-hello
            %a{href: "#top", rel: "nofollow"} Hello
          %li.nav-portfolio
            %a{href: "#portfolio", rel: "nofollow"} Portfolio
          %li.nav-about
            %a{href: "#about", rel: "nofollow"} About
          %li.nav-contact
            %a{href: "#contact", rel: "nofollow"} Contact