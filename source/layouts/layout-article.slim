// Layout template for individual blog articles
= partial "partials/head"

section#article-single
  article role="main"
    // All articles should have a unique hero image
    // Fallback to a temporary placeholder if no image is provided
    = image_tag (current_page.data.hero_image ? "articles/#{current_page.data.hero_image}" : "http://placehold.it/1140x334"),:alt => (current_page.data.hero_alt ? "#{current_page.data.hero_alt}" : "#{current_page.data.title}"), :class => "blog-hero"
    hr
    h1 #{current_page.data.title}
    - if current_page.data.date
      time.time pubdate="pubdate" datetime="#{current_page.data.date}" Last updated #{current_page.date.strftime('%Y-%m-%d')}
    // Pipe in main article content
    = yield
  hr
  a.back-to-articles href="#{url_blog}" &#8617; All articles
  hr
  = disqus

= partial "partials/footer"
